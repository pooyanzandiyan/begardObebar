<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/scan_logo" />
    <Button
        android:id="@+id/button_start_scan"
        android:layout_width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_two"
        android:background="@drawable/bg_btn_selector"
        android:text="اسکن کن"
 />
    <TextView
        android:id="@+id/txtInMarkar"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#E78607"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="120dp"
        android:text="امکان اسکن qr کد برای شما وجود ندارد زیرا شما در حال حاضر در مجموعه مارکار (در جام) نیستید"/>
    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/prg"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#E78607"
        android:layout_marginBottom="10dp"
        android:text="درحال مکان یابی..."/>

</RelativeLayout>
