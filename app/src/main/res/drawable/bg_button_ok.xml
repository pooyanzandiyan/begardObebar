<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="true">
		<shape android:shape="rectangle">
			<corners android:radius="24dp"/>
			<stroke
					android:width="2dp"
					android:color="@color/charcoal_grey"/>
			<solid android:color="@color/dirty_orange"/>
			<padding
					android:bottom="8dp"
					android:left="8dp"
					android:right="8dp"
					android:top="8dp"/>
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<corners android:radius="24dp"/>
			<stroke
					android:width="2dp"
					android:color="@color/charcoal_grey"/>
			<solid android:color="@color/light_grey_blue_end"/>
			<padding
					android:bottom="8dp"
					android:left="8dp"
					android:right="8dp"
					android:top="8dp"/>
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape android:shape="rectangle" >
			<corners android:radius="24dp" />
			<stroke android:width="2dp" android:color="@color/charcoal_grey" />
			<solid android:color="#22FFFFFF"/>
			<padding
					android:bottom="8dp"
					android:left="8dp"
					android:right="8dp"
					android:top="8dp"/>
		</shape>
	</item>

</selector>