<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.jarvissoft.begardobebar">

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:name="com.jarvissoft.begardobebar.BegardObebarApplication"
		android:allowBackup="true"
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name="com.jarvissoft.begardobebar.activities.SplashScreenActivity"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.jarvissoft.begardobebar.activities.MainActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.AuthenticationActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.ConfirmAuthenticationActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.ChangeProfile"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.QuestionActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.AvatarActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name="com.jarvissoft.begardobebar.activities.NoInternetActivity"
			android:screenOrientation="portrait" />
	</application>

</manifest>